{% extends 'base.html.twig' %}

{% block title %}Search Page - Wal&Train{% endblock %} 

{% block meta_description %}
    <meta name="description" content="Walk&Train search page that lets user look for training sessions or walks by city or town">
    <meta name="keywords" content="Walk&Train, dog, dog trainers near me, dog walks near me, dog owners community">
{% endblock %}

{% block body %}

    <div class="search-container">
        
        <div class="search-form-container">
          
            <h1>Search for dog walks or training sessions near you <i class="fa-solid fa-paw"></i></h1>
          
            <form method="post" class="search-form">

                {{ form_start(searchForm) }}

                    {{ form_label(searchForm.ville) }}
                    {{ form_widget(searchForm.ville) }}

                    {{ form_widget(searchForm.type) }}

                    {{ form_widget(searchForm.submit, { 'attr' : { 'data-label': 'submit training session/ dog walk search form' } }) }}

                {{ form_end(searchForm) }}
                
                
            </form>            

        </div>

        
    </div>

{% endblock %}
