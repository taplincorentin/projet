{% extends 'base.html.twig' %}

{% block title %}Category Topics{% endblock %}

{% block body %}    
    <div>
        <h2>{{categorie}}</h2>
    </div>

    <div class="topics">
        <h3>Topics</h3>
        {% for topic in categorie.topics %}
            <div class="categorie-topic">
                <td><a href="{{ path('show_topic', {'id': topic.id}) }}">{{topic}} {{topic.dateCreation | date('d-m-Y H:i:s')}}</a></td>
            </div>
        {% endfor %}
    </div>
    

{% endblock %}