{% extends 'base.html.twig' %}

{% block title %}CategoryList{% endblock %}

{% block body %}


<div class="categories">
    <table>
        <thead>
            <tr>
                <th>categories</th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
                <tr>
                    <td><a href="{{ path('show_categorie', {'id': categorie.id}) }}">{{ categorie }}</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
