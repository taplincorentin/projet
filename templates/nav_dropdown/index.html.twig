<div class="dropdown">
    <a class="btn btn-secondary dropdown-toggle" href="" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="fa-solid fa-comments"></i> Forum
    </a>
  
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <li><a class="dropdown-item" href="{{ path('app_categorie') }}" aria-label="go to  forum homepage">Homepage</a></li>
        {% for categorie in categories %}
                {% if (categorie.nom != 'Walks') and (categorie.nom != 'Sessions') %}
                    <li><a class="dropdown-item" href="{{ path('show_categorie', {'id': categorie.id}) }}" aria-label="{{ "go to " ~ categorie ~ "'s list of topics" }}">{{ categorie }}</a></li>
                {% endif %}
              {% endfor %} 
    </ul>
</div>