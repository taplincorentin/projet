{% extends 'base.html.twig' %}

{% block title %}Topic Posts{% endblock %}

{% block body %}    
    <div>
        <h2>{{topic}}</h2>
    </div>

    <div class="posts">
        <h3>Posts</h3>
        {% for post in topic.posts %}
            <div class="topic-post">
                <td>{{post.auteur}}</td>
                <td>{{post}}</td>
                <td>{{post.dateCreation | date('d-m-Y H:i:s')}}</td>
            </div>
        {% endfor %}
    </div>
    

{% endblock %}